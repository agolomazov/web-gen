    include _demo-control
    
    main.container
        .container_base
            .workspace
                h1.workspace_header
                    span.workspace_title Генератор водяных знаков
                .workspace_board
        .container_side
            .control
                .control_title Настройки
                .control_block
                    .uploader-label Исходное изображение
                    label.uploader
                        .uploader_field Изображение отсутствует
                        a.uploader_button
                        input.uploader_input(type="file")
                    #progress
                        .bar(style="width: 0%")

                    .uploader-label Водяной знак
                    label.uploader
                        .uploader_field Изображение отсутствует
                        a.uploader_button
                        input.uploader_input(type="file")
                .control_block
                    .control_block-title Положение
                    .position
                        .position_block
                            .position-area
                                a.position-area--current(href="#" data-step-x="0" data-step-y="0")
                                a(href="#" data-step-x="1" data-step-y="0")
                                a(href="#" data-step-x="2" data-step-y="0")
                                a(href="#" data-step-x="0" data-step-y="1")
                                a(href="#" data-step-x="1" data-step-y="1")
                                a(href="#" data-step-x="2" data-step-y="1")
                                a(href="#" data-step-x="0" data-step-y="2")
                                a(href="#" data-step-x="1" data-step-y="2")
                                a(href="#" data-step-x="2" data-step-y="2")
                        .position_block
                            .position_spinner
                                .spinner
                                    .spinner_axis X
                                    input.spinner_input(type="text" id="spinnerHorizont")

                            .position_spinner
                                .spinner
                                    .spinner_axis Y
                                    input.spinner_input(type="text" id="spinnerVertical")

                .control_block
                    .control_block-title Прозрачность
                    include _range
                .control_button-group
                    button.control_button-reset Сброс
                    button.control_button-download Скачать

    aside.aside-wrapper
        .language
            ul.language_list
                li.language_item
                    a.language_link(href="#") рус
                li.language_item
                    a.language_link(href="#") eng
        .socials
            a.icon_general.icon-40
            ul.icon_list
                li.icon_item
                    a.icon_link.icon_link-facebook.icon-40(href="#")
                li.icon_item
                    a.icon_link.icon_link-twitter.icon-40(href="#")
                li.icon_item
                    a.icon_link.icon_link-vk.icon-40(href="#")


